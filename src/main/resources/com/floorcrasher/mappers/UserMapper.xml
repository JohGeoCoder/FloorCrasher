<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.floorcrasher.mappers.UserMapper">
	<insert id="insertUser" parameterType="com.floorcrasher.model.User">
		INSERT INTO user (id, username, email, registration_date, enabled)
		VALUES (DEFAULT, #{username}, #{email}, #{registration_date}, 1)
	</insert>
	
	<select id="getUserById" parameterType="java.lang.Long" resultMap="userMap">
	    SELECT id, username, email, registration_date, enabled
	    FROM user
	    WHERE id=#{id}
	</select>
	
	<resultMap type="com.floorcrasher.model.User" id="userMap">
	    <id property="id" column="id" />
	    <result property="username" column="username" />
	    <result property="email" column="email" />
	    <result property="registrationDate" column="registration_date" />
	    <result property="enabled" column="enabled" />
	</resultMap>
</mapper>